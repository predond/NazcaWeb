<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NazcaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NazcaWeb.styles.css" asp-append-version="true" />

    <script src="~/lib/jQuery/jquery-3.7.0.min.js"></script>
    <script src="~/lib/SignalR/signalr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @if (!(ViewBag.nazcaMode != null && ViewBag.nazcaMode == true))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NazcaWeb</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbar-text">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <div class="dropdown">
                                    <a class="nav-link text-dark dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        Energia
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <li><a class="dropdown-item text-dark" asp-action="">Fronius</a></li>
                                        <li><a class="dropdown-item text-dark" asp-action="">UPS</a></li>
                                        <li><a class="dropdown-item text-dark" asp-action="">Pompa ciepła</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-action="Films">Filmy</a>
                            </li>
                        </ul>
                        <span class="navbar-text">
                            @ViewData["Title"]
                        </span>
                    </div>
                </div>
            </nav>
        </header>
    }
    @{
        var container = ViewBag.nazcaMode != null && ViewBag.nazcaMode == true ? "m-2" : "container";
    }
    <div class="@container">
        @{
            var addPadding = ViewBag.nazcaMode != null && ViewBag.nazcaMode == true ? "pt-3 pb-4" : "";
        }
        <main role="main" class="pb-3 @addPadding">
            @RenderBody()
        </main>
    </div>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
